<!-- Main Content -->
<div class="container">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
			<%
			var first = true;
			page.posts.each(function(post) {
				if (first) {
					first = false;
				} else { %>
					<hr/>
				<% } %>
				<div class="post-preview">
					<a href="<%- url_for(post.path) %>">
						<h2 class="post-title">
							<%- post.title %>
						</h2>
					</a>
					<p class="post-meta">
						<time datetime="<%= date_xml(post.date) %>" itemprop="datePublished">
							<%= date(post.date, 'MMMM Do YYYY') %>
						</time>
						<% if (post.tags && post.tags.length){ %>
							&bull;
							<%- list_tags(post.tags, {show_count: false, style: 'commas'}) %>
						<% } %>
					</p>
					<% if (post.excerpt){ %>
						<div class="article-excerpt"><%- post.excerpt %></div>
						<p class="article-more-link">
							<a class="btn btn-default" href="<%- url_for(post.path) %>#more">Read more</a>
						</p>
					<% } else { %>
						<%- post.content %>
					<% } %>
				</div>
			<% }) %>
		</div>
	</div>
</div>
